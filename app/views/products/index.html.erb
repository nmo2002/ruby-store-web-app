
<div class="container mt-5">
  <h1 class="text-center mb-4">Products</h1>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-4 product">
          <div class="card-body">
            <%= link_to product.name, product_path(product), class: "card-title stretched-link h2" %>
            <p class="card-text mt-3">Price: <%= number_to_currency(product.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
